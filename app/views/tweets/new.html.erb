<h3>今日の朝活内容を投稿して、みんなに共有しよう！</h3>

<%= form_for @tweet do |f| %>

  <div class="new-tweet-container">

    <div class="new-tweet-card">
    
      <div class="field">
        <%= f.label :name %>
        <%= f.text_field :name, size: 30 %>
      </div>

      <div class="field">
        <%= f.label :date %>
        <%= f.date_field :date, id: "tweet_date" %>
      </div>

      <div class="field">
        <%= f.label :about %>
        <%= f.text_area :about, size: "30x2" %>
      </div>

      <div class="field">
        <%= f.label :image %>
        <%= f.file_field :image %>
      </div>

    </div>

    <div class="new-tweet-button">
      <%= f.submit "投稿する" %>
    </div>

  </div>

<% end %>


<!-- コーヒーアイコン -->
<img src="<%= asset_path('coffee-icon.png') %>" class="coffee-icon" alt="Coffee">


