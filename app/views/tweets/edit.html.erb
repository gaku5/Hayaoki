<%= form_for @tweet do |f| %>
    <div class="edit-tweet-container">
        <div class="edit-tweet-card">
            <%= f.label :about %>
            <%= f.text_field :about, :size => 85 %> 
        </div> 
        <div class="edit-tweet-button">
            <%= f.submit "編集する" %>
        </div>
    </div>    
<% end %>

<div class="back-to-index">
    <%= link_to "一覧に戻る", tweets_path %>
</div>